	<!-- Features -->
	<remove-project name="LineageOS/android_vendor_lineage" />
	<project name="android_vendor_lineage" path="vendor/lineage" remote="legacy" />

	<project name="android_vendor_addons" path="vendor/addons" remote="legacy" />

	<remove-project name="LineageOS/android_frameworks_base" />
	<project name="android_frameworks_base" path="frameworks/base" remote="legacy" />

	<remove-project name="LineageOS/android_packages_overlays_Lineage" />
