<?xml version="1.0" encoding="UTF-8"?>
<manifest>
	<remote name="legacy"
		fetch="https://github.com/droid-legacy"
		revision="lineage-19.1" />

	<remove-project name="LineageOS/android" />
	<project name="android" path="android" remote="legacy" />
	<remove-project name="LineageOS/android_build" />
	<project name="android_build" path="build/make" remote="legacy" >
	  <copyfile src="core/root.mk" dest="Makefile" />
	  <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
	  <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
	  <linkfile src="core" dest="build/core" />
	  <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
	  <linkfile src="target" dest="build/target" />
	  <linkfile src="tools" dest="build/tools" />
	</project>
	<remove-project name="LineageOS/android_build_soong" />
	<project name="android_build_soong" path="build/soong" remote="legacy" >
	  <linkfile src="root.bp" dest="Android.bp" />
	  <linkfile src="bootstrap.bash" dest="bootstrap.bash" />
	</project>

	<!-- DTB Tool -->
	<project name="LineageOS/android_system_tools_dtbtool" path="system/tools/dtbtool" revision="lineage-18.1" />

	<!-- Patches -->
	<remove-project name="LineageOS/android_system_netd" />
	<project name="android_system_netd" path="system/netd" remote="legacy" />

	<remove-project name="platform/system/bpf" />
	<project name="android_system_bpf" path="system/bpf" remote="legacy" />

	<remove-project name="LineageOS/android_kernel_configs" />
	<project name="android_kernel_configs" path="kernel/configs" remote="legacy" />

	<remove-project name="platform/packages/modules/NetworkStack" />
	<project name="android_packages_modules_NetworkStack" path="packages/modules/NetworkStack" remote="legacy" />

	<!-- remove-project name="LineageOS/android_hardware_interfaces" />
	<project name="android_hardware_interfaces" path="hardware/interfaces" remote="legacy" / -->

	<!-- Custom DNS -->
	<remove-project name="LineageOS/android_packages_apps_Settings" />
	<project name="android_packages_apps_Settings" path="packages/apps/Settings" remote="legacy" />

	<remove-project name="LineageOS/android_packages_modules_Connectivity" />
	<project name="android_packages_modules_Connectivity" path="packages/modules/Connectivity" remote="legacy" />

	<remove-project name="platform/frameworks/libs/net" />
	<project name="android_frameworks_libs_net" path="frameworks/libs/net" remote="legacy" />

	<!-- Launcher -->
	<remove-project name="LineageOS/android_packages_apps_Trebuchet" />
	<project name="android_packages_apps_Trebuchet" path="packages/apps/Trebuchet" remote="legacy" />

	<remove-project name="platform/frameworks/libs/systemui" />
	<project name="android_frameworks_libs_systemui" path="frameworks/libs/systemui" remote="legacy" />

	<remove-project name="LineageOS/android_packages_apps_ThemePicker" />
	<project name="crdroidandroid/android_packages_apps_ThemePicker" path="packages/apps/ThemePicker" revision="12.1" />

	<!-- Optimizations -->
	<remove-project name="platform/art" />
	<project name="android_art-1" path="art" remote="legacy" />

	<remove-project name="LineageOS/android_frameworks_native" />
	<project name="android_frameworks_native" path="frameworks/native" remote="legacy" />

	<remove-project name="LineageOS/android_system_core" />
	<project name="android_system_core" path="system/core" remote="legacy" />

	<remove-project name="LineageOS/android_external_libvpx" />
